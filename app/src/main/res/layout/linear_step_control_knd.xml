<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorSoftSkyBlue"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/LinearLabelEngineLaunching"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_control_knd"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="14dp"
            android:textSize="12pt"/>
        <TextView
            android:id="@+id/LinearLabelPcEngine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_pc_engine_install"
            android:textSize="10pt"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <TextView
                android:id="@+id/LinearLabelNKVD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_n_kvd"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/LinearLabel97"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_97"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/LinearLabel99"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_99"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/LinearLabelEngine101"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_101"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <TextView
                android:id="@+id/LinearLabelNKVDPHY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_n_kvd_phy"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="1.25"/>
            <EditText
                android:id="@+id/LinearLabelInpNKVDPHY97"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter"
                android:inputType="numberDecimal"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="0.888"/>
            <EditText
                android:id="@+id/LinearLabelInpNKVDPHY99"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter"
                android:inputType="numberDecimal"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="0.888"/>
            <EditText
                android:id="@+id/LinearLabelInpNKVDPHY101"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter"
                android:inputType="numberDecimal"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="0.99"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <TextView
                android:id="@+id/LinearLabelNKNDPHY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_n_knd_phy"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="1.25"/>
            <EditText
                android:id="@+id/LinearLabelInpNKNDPHY97"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter"
                android:inputType="numberDecimal"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="0.888"/>
            <EditText
                android:id="@+id/LinearLabelInpNKNDPHY99"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter"
                android:inputType="numberDecimal"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="0.888"/>
            <EditText
                android:id="@+id/LinearLabelInpNKNDPHY101"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter"
                android:inputType="numberDecimal"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="0.99"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4">
            <TextView
                android:id="@+id/LinearLabelNKNDPLANE"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/label_n_knd_plane"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_weight="1.25"/>
            <EditText
                android:id="@+id/LinearLabelInpNKNDPLANE97"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter"
                android:inputType="numberDecimal"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="0.888"/>
            <EditText
                android:id="@+id/LinearLabelInpNKNDPLANE99"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter"
                android:inputType="numberDecimal"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="0.888"/>
            <EditText
                android:id="@+id/LinearLabelInpNKNDPLANE101"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/enter"
                android:inputType="numberDecimal"
                android:textSize="10pt"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="0.99"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/LinearButtonNextControlKND"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="18sp"
                android:textAllCaps="false"
                android:padding="10sp"
                android:drawablePadding="10sp"
                android:ems="6"
                android:text="@string/button_next"
                android:textColor="#000000"
                android:fontFamily="@font/verdana"
                android:textSize="18sp"
                android:background="@drawable/shape_button" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>