<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorSoftSkyBlue"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/LinearLabelSystemCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_system_check"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="14dp"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/LinearN1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_n1"
            android:padding="5dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearInpN1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center" />
        <TextView
            android:id="@+id/LinearTRC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_trc"
            android:textSize="16sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearInpTRC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/LinearPm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_pm"
            android:textSize="10pt"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearInpPm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/LinearTmC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_tmc"
            android:textSize="16sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearInpTmC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/LinearPt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_pt"
            android:textSize="16sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearInpPt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/LinearEngineSqrt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_engine_sqrt"
            android:textSize="16sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearInpEngineSqrt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/LinearPPKSwitchMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_ppk_switch_min"
            android:textSize="16sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearInpPPKSwitchMin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/LinearPPKSwitchMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_ppk_switch_max"
            android:textSize="16sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearInpPPKSwitchMax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/LinearLabelSwitchPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_switch_position"
            android:textSize="16sp"
            android:textStyle="italic"
            android:gravity="center"/>
        <TextView
            android:id="@+id/LinearLabelAirConditioning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_air_conditioning"
            android:textSize="16sp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/RelativeTurnOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_turn_on_dot"
                android:layout_toLeftOf="@+id/RelativeCenterTurnOn"
                android:layout_toStartOf="@+id/RelativeCenterTurnOn"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:gravity="end"
                android:padding="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/RelativeCenterTurnOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:padding="5dp"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/RelativeInpTurnOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/RelativeCenterTurnOn"
                android:layout_alignTop="@+id/RelativeCenterTurnOn"
                android:layout_toEndOf="@+id/RelativeCenterTurnOn"
                android:layout_toRightOf="@+id/RelativeCenterTurnOn"
                android:hint="@string/enter"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/RelativeTurnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_turn_off"
                android:layout_below="@+id/RelativeTurnOn"
                android:layout_toLeftOf="@+id/RelativeCenterTurnOff"
                android:layout_toStartOf="@+id/RelativeCenterTurnOff"
                android:padding="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/RelativeCenterTurnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeCenterTurnOn"
                android:layout_centerInParent="true"
                android:text=""
                android:padding="5dp"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/RelativeInpTurnOff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/RelativeCenterTurnOff"
                android:layout_alignTop="@+id/RelativeCenterTurnOff"
                android:layout_toEndOf="@+id/RelativeCenterTurnOff"
                android:layout_toRightOf="@+id/RelativeCenterTurnOff"
                android:hint="@string/enter"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="14sp"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/LinearLabelAntiIcingAgent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_anti_icing_agent"
            android:textSize="16sp"
            android:gravity="center"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/RelativeTurnOn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_turn_on_dot"
                android:layout_toLeftOf="@+id/RelativeCenterTurnOn_2"
                android:layout_toStartOf="@+id/RelativeCenterTurnOn_2"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:gravity="end"
                android:padding="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/RelativeCenterTurnOn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text=""
                android:padding="5dp"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/RelativeInpTurnOn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/RelativeCenterTurnOn_2"
                android:layout_alignTop="@+id/RelativeCenterTurnOn_2"
                android:layout_toEndOf="@+id/RelativeCenterTurnOn_2"
                android:layout_toRightOf="@+id/RelativeCenterTurnOn_2"
                android:hint="@string/enter"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/RelativeTurnOff_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_turn_off"
                android:layout_below="@+id/RelativeTurnOn_2"
                android:layout_toLeftOf="@+id/RelativeCenterTurnOff_2"
                android:layout_toStartOf="@+id/RelativeCenterTurnOff_2"
                android:padding="5dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/RelativeCenterTurnOff_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/RelativeCenterTurnOn_2"
                android:layout_centerInParent="true"
                android:text=""
                android:padding="5dp"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/RelativeInpTurnOff_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/RelativeCenterTurnOff_2"
                android:layout_alignTop="@+id/RelativeCenterTurnOff_2"
                android:layout_toEndOf="@+id/RelativeCenterTurnOff_2"
                android:layout_toRightOf="@+id/RelativeCenterTurnOff_2"
                android:hint="@string/enter"
                android:inputType="number"
                android:padding="5dp"
                android:textSize="14sp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/LinearButtonNextStepSmallGas2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="18sp"
                android:textAllCaps="false"
                android:padding="10sp"
                android:drawablePadding="10sp"
                android:ems="6"
                android:text="@string/button_next"
                android:textColor="#000000"
                android:fontFamily="@font/verdana"
                android:textSize="18sp"
                android:background="@drawable/shape_button" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>