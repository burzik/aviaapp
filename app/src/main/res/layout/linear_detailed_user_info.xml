<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorSoftSkyBlue"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp">
        <TextView
            android:id="@+id/LinearLabelFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_first_name"
            android:padding="5dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearLabelInpFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center" />
        <TextView
            android:id="@+id/LinearLabelLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_last_name"
            android:padding="5dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/LinearLabelInpLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center" />

        <TextView
            android:id="@+id/LinearLabelEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_email"
            android:padding="5dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/LinearLabelInpEmailDetailed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="16sp"
            android:gravity="center" />
        <TextView
            android:id="@+id/LinearLabelPrivileges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_set_privileges"
            android:padding="5dp"
            android:textSize="16sp"
            android:gravity="center"/>
        <Spinner
            android:id="@+id/LinearLabelInpSpinnerPrivileges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:gravity="center" />
        <Button
            android:id="@+id/LinearButtonUpdateUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:textAllCaps="false"
            android:padding="10sp"
            android:drawablePadding="10sp"
            android:ems="8"
            android:text="@string/update"
            android:textColor="#000000"
            android:fontFamily="@font/verdana"
            android:textSize="18sp"
            android:layout_gravity="end"
            android:background="@drawable/shape_button" />

    </LinearLayout>
</ScrollView>